<RDF xmlns="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
  xmlns:em="http://www.mozilla.org/2004/em-rdf#">

  <Description about="urn:mozilla:install-manifest">
    <em:id>click-to-play-manager@xulforge.com</em:id>
    <em:name>Click-to-Play Manager</em:name>
    <em:description>Manages the Click-to-Play domain whitelist.</em:description>
    <em:version>1.4</em:version>
    <em:creator>Jorge Villalobos</em:creator>
    <em:homepageURL>http://github.com/jvillalobos/CTP-Manager</em:homepageURL>
    <em:bootstrap>true</em:bootstrap>
    <em:type>2</em:type>
    <em:optionsURL>chrome://ctpmanager/content/ctpManager.xul</em:optionsURL>

    <!-- Mozilla Firefox -->
    <em:targetApplication>
      <Description>
        <em:id>{ec8030f7-c20a-464f-9b0e-13a3a9e97384}</em:id>
        <em:minVersion>42.0</em:minVersion>
        <em:maxVersion>44.*</em:maxVersion>
      </Description>
    </em:targetApplication>

    <!-- SeaMonkey -->
    <em:targetApplication>
      <Description>
        <em:id>{92650c4d-4b8e-4d2a-b7eb-24ecf4f6b63a}</em:id>
        <em:minVersion>2.39</em:minVersion>
        <em:maxVersion>2.40.*</em:maxVersion>
      </Description>
    </em:targetApplication>

    <!-- Mozilla Firefox for Android -->
    <em:targetApplication>
      <Description>
        <em:id>{aa3c5121-dab2-40e2-81ca-7ea25febc110}</em:id>
        <em:minVersion>42.0</em:minVersion>
        <em:maxVersion>44.*</em:maxVersion>
      </Description>
    </em:targetApplication>

    <!-- Localized versions of the description-->
    <em:localized>
      <Description>
        <em:locale>es</em:locale>
        <em:name>Click-to-Play Manager</em:name>
        <em:description>Administra la lista de dominios permitidos para click-to-play.</em:description>
        <em:creator>Jorge Villalobos</em:creator>
        <em:homepageURL>http://github.com/jvillalobos/CTP-Manager</em:homepageURL>
      </Description>
    </em:localized>
  </Description>
</RDF>
